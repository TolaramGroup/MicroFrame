##############################
##
## Config initialization..
##
##############################

RewriteEngine On
RewriteCond $1 !^(index\.php)
#RewriteRule ^(.*)$ /index.php/$1 [L,R=301]
RewriteCond $1 !^(index\.php|*\.jpg|*\.gif|*\.css|*\.png)

RedirectMatch 403 ^/vendor/?$
IndexIgnore *
Options All -Indexes

order deny,allow
deny from all

<FilesMatch "\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

<FilesMatch "index[0-9]?\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

<Files .htaccess>
order allow,deny
deny from all
</Files>

<Files composer.*>
order allow,deny
deny from all
</Files>
